#include <bits/stdc++.h>
using namespace std;
int main() {
    long long ans = 0;
    char x;
    while(cin >> x){
        if(x=='-') {ans++;}
        else {
            if(x=='0') ans += 6;
            if(x=='1') ans+=2;
            if(x=='2') ans+=5;
            if(x=='3') ans+=5;
            if(x=='4') ans+=4;
            if(x=='5') ans+=5;
            if(x=='6') ans+=6;
            if(x=='7') ans+=3;
            if(x=='8') ans+=7;
            if(x=='9') ans+=6;
        }

    }
    cout << ans;
 }
